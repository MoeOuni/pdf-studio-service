# Environment Configuration for PDF Studio Service

# Stage/Environment
NODE_ENV=development
STAGE=dev

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# PostgreSQL Database (AWS RDS)
DATABASE_URL="postgresql://username:password@your-rds-endpoint:5432/pdf_studio_db?schema=public"
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=pdf_studio_db
DB_USER=pdf_studio_user
DB_PASSWORD=your-secure-password
DB_SSL=true
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# DynamoDB Configuration
DYNAMODB_REGION=us-east-1
DYNAMODB_ENDPOINT=http://localhost:8000  # For local development only

# S3 Configuration
S3_BUCKET_NAME=pdf-studio-files-dev
S3_REGION=us-east-1
S3_UPLOAD_BUCKET=pdf-studio-uploads-dev
S3_GENERATED_BUCKET=pdf-studio-generated-dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=application/pdf
UPLOAD_TIMEOUT=300000

# PDF Generation Configuration
PDF_GENERATION_TIMEOUT=60000
PDF_MAX_PAGES=100
PDF_MAX_FIELDS=500

# Cache Configuration (Redis - Optional)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@pdfstudio.com

# Feature Flags
ENABLE_FILE_DEDUPLICATION=true
ENABLE_PDF_CLEANUP=true
ENABLE_ANALYTICS=false
ENABLE_AUDIT_LOGS=true

# Development Only
SERVERLESS_OFFLINE_PORT=3001
DYNAMODB_LOCAL_PORT=8000